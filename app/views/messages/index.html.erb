<h1>Messages</h1>

<ul>
  <% @messages.each do |message| %>
    <li class="message">
      <span class="date"><%= message.date.strftime("%Y-%m-%D %H:%M:%S") %></span>
      <span class="subject"><%= link_to message.subject, message_path(message) %></span>
      <span class="sender"><%= message.from %></span>
    </li>
  <% end %>
</ul>