<h1>Conversations</h1>
<ul id="conversations">
  <% @conversations.each do |conversation| %>
    <li class="conversation">
      <abbr class="date" title="<%= conversation.latest_message_date.iso8601 %>">
        <%= conversation.latest_message_date.to_date.to_s(:long_ordinal) %>
      </abbr>
      <span class="subject"><%= conversation.subject %></span>
    </li>
  <% end %>
</ul>